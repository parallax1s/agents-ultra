{
  "private": true,
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "scripts": {
    "hygiene": "node scripts/ensure-repo-hygiene.mjs",
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "node scripts/ensure-vitest-or-skip.mjs --skip-if-missing",
    "test:strict": "npm run test:unit -- --strict && npm run test:e2e:strict",
    "test:skip": "node scripts/ensure-vitest-or-skip.mjs --skip-if-missing",
    "test:e2e": "node scripts/ensure-playwright-or-skip.mjs",
    "test:e2e:strict": "node scripts/ensure-playwright-or-skip.mjs --strict",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
